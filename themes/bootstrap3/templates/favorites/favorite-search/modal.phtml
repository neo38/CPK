      </div>
      <div class='modal-footer'>
        <button type='button'
                class='btn btn-primary'
                data-dismiss='modal'
                onclick='VuFind.addSearchToFavorites()'>
          <?= $this->translate('Add to favorites'); ?>
        </button>
      </div>
    </div>
  </div>
