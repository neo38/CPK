          <select id='numberOfRecordsToAdd' class='form-control'>
            <? foreach(array_keys($this->params->getLimitList()) as $limit): ?>
              <option value='<?=$limit?>' <?= ($limit == $this->limit) ? ' selected' : '' ?>>
