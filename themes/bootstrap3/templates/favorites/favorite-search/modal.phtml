          </select>
        </div>

        <div class='form-group'>
          <label class='control-label' for='newFavoritesListTitle'>
            <?=$this->translate('Favorites list title') ?>
          </label>
          <input type='text'
                 id='newFavoritesListTitle'
                 value=''
                 class='form-control'
                 placeholder=''>
