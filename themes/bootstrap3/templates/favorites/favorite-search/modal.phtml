<!-- Add to favorites Modal -->
<div class='modal fade text-left favoriteModalForSearch'
     id='favoriteModalForSearch'
     tabindex='-1'
     role='dialog'
     aria-labelledby='favoriteModalForSearchLabel'
     aria-hidden='true'
     data-search-id='<?=urlencode($this->results->getSearchId())?>'>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='favoriteModalForSearchLabel'>
